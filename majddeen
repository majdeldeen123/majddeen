  <script>
    // dynamic year
    try { document.getElementById('year').textContent = new Date().getFullYear(); } catch(e){ console.warn('Year element missing', e); }

    // lazy load images
    (function(){
      const lazy = Array.from(document.querySelectorAll('img.lazy'));
      if('IntersectionObserver' in window){
        const io = new IntersectionObserver((entries)=>{
          entries.forEach(e=>{
            if(e.isIntersecting){
              const img = e.target;
              if(img.dataset && img.dataset.src){
                img.src = img.dataset.src;
                img.removeAttribute('data-src');
                img.classList.remove('lazy');
              }
              io.unobserve(img);
            }
          })
        },{rootMargin:'200px'});
        lazy.forEach(img=>io.observe(img));
      } else {
        lazy.forEach(img=>{ if(img.dataset && img.dataset.src) img.src = img.dataset.src});
      }
    })();

    // Defensive wrapper for ethereum provider: do NOT auto-connect.
    (function(){
      if (typeof window === 'undefined') return;
      try {
        if (window.ethereum) {
          window.__MAJDDEEN_metaMask_detected = true;
          console.info('MetaMask/ethereum provider detected. Preview wrapper is active.');
          try {
            const canWrap = !!window.ethereum.request && (function() {
              try {
                const desc = Object.getOwnPropertyDescriptor(window.ethereum, 'request');
                return !desc || desc.writable !== false;
              } catch (e) { return false; }
            })();

            if (canWrap) {
              const originalRequest = window.ethereum.request.bind(window.ethereum);
              window.ethereum.request = async function(args) {
                console.warn('Blocked ethereum.request call in preview environment. args:', args);
                return Promise.reject(new Error('MetaMask requests are disabled in this preview environment. Click "اختبار MetaMask" to run a controlled test.'));
              };
              window.__MAJDDEEN_metaMask_wrapped = true;
            } else {
              console.warn('ethereum.request is not writable; wrapper not applied.');
            }
          } catch (wrapErr) {
            console.warn('Could not wrap ethereum.request safely:', wrapErr);
          }
        }
      } catch (err) {
        console.warn('Error while checking ethereum provider:', err);
      }
    })();

    // Debug banner
    (function(){
      function showDebugBanner(msg, isPersistent){
        try {
          let banner = document.getElementById('__majddeen_debug_banner');
          if (!banner) {
            banner = document.createElement('div');
            banner.id = '__majddeen_debug_banner';
            banner.className = 'debug-banner';
            banner.innerHTML = '<div id="__majddeen_debug_text"></div><div><button id="__majddeen_debug_close">إغلاق</button></div>';
            document.body.appendChild(banner);
            document.getElementById('__majddeen_debug_close').addEventListener('click', ()=>{ banner.style.display='none'; });
          }
          document.getElementById('__majddeen_debug_text').textContent = msg;
          banner.style.display = 'flex';
          if(!isPersistent){
            setTimeout(()=>{ banner.style.display = 'none'; }, 8000);
          }
        } catch(e){ console.warn('Could not show debug banner', e); }
      }

      window.addEventListener('error', function(ev){
        const msg = ev && ev.message ? ev.message : String(ev);
        if (msg && (msg.toLowerCase().includes('metamask') || msg.toLowerCase().includes('ethereum') || msg.toLowerCase().includes('failed to connect'))) {
          console.warn('Caught error related to MetaMask/ethereum:', msg, ev);
          showDebugBanner('تحذير: تم رصد خطأ متعلق بـ MetaMask/ethereum. هذا المعاين يمنع الاتصالات التلقائية. افتح Console لفحص المصدر.', true);
        }
      });

      window.addEventListener('unhandledrejection', function(ev) {
        const reason = ev && ev.reason ? (ev.reason.message || ev.reason.toString()) : 'Unhandled rejection';
        if (reason && (reason.toLowerCase().includes('metamask') || reason.toLowerCase().includes('ethereum') || reason.toLowerCase().includes('failed to connect'))) {
          console.warn('Caught promise rejection related to MetaMask/ethereum:', reason, ev);
          showDebugBanner('تحذير: تم رصد Promise rejection متعلق بـ MetaMask/ethereum. افتح Console للتفاصيل.', true);
        }
      });

      // expose for manual use
      window.__majddeen_showDebug = showDebugBanner;
    })();

    // Test button behavior: safe test triggered only on user click
    (function(){
      const btn = document.getElementById('test-wallet');
      if(!btn) return;
      btn.addEventListener('click', async function(){
        const show = window.__majddeen_showDebug || function(msg){ alert(msg); };
        try {
          if(!window.ethereum){
            show('لا يوجد مزوّد Ethereum (MetaMask) مثبت في المتصفح.', false);
            return;
          }
          // Attempt a controlled request; our wrapper should reject with a specific message.
          const result = await window.ethereum.request({ method: 'eth_requestAccounts' }).catch(err => { throw err; });
          // If it resolves (unlikely in this preview), show accounts
          show('تم الحصول على حسابات: ' + JSON.stringify(result), false);
        } catch (err){
          // Display the controlled rejection message (wrapped)
          const msg = err && err.message ? err.message : String(err);
          show('نتيجة اختبار MetaMask: ' + msg, false);
          console.warn('Test wallet result:', err);
        }
      });
    })();
  </script>
